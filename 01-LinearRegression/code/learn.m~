%% read raw csv data
trainingdata = csvread('../testdata/training.csv');
validationdata = csvread('../testdata/validationdata.csv');


%% normalize data
dMean = repmat(mean(trainingdata), nSamples, 1);
dVar = repmat(var(trainingdata), nSamples, 1);

normalizedData = (trainingdata - dMean) ./ dVar;

%% plot data
%compare(training_data, [1 15; 2 15]);
%compare(trainingdata, [13 15]);
%compare(trainingdata, [14 15]);~


%% split them
result = trainingdata(:,15);
features = trainingdata(:,1:14);


% logarithmic features
% column 8 to 13 are numbers to the power of 2

% result varies by 10^x
% result = log(result);

%% crossvalidation
[meanErr, W, errorTest] = crossvalidation(features, result, 0)

%give index of smallest error
[~, index] = min(errorTest);


w = W{index};



